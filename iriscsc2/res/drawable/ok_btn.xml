<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"  android:shape="rectangle" >

    <!-- 描边 -->
    <stroke
        android:dashGap="0dip"
        android:dashWidth="2dip"
        android:width="1dp"
        android:color="#40434a" />
    <gradient 
        android:startColor="#ff0055aa"
        android:endColor="#ff007fff"
        android:type="linear"
        android:centerX="50%"
        android:angle="90"
        android:centerY="50%"
        android:useLevel="false"
        />

    <!-- 圆角 -->
    <corners android:radius="20dp" />
    
</shape>
