<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <gradient
        android:angle="90"
        android:centerX="50%"
        android:centerY="50%"
        android:endColor="#ff007fff"
        android:startColor="#ff0055aa"
        android:type="linear"
        android:useLevel="false" />
    <!-- 描边 -->
    <stroke
        android:dashGap="0dip"
        android:dashWidth="2dip"
        android:width="1dp"
        android:color="#30333a" />

    <!-- 圆角 -->
    <corners android:radius="20dp" />

</shape>