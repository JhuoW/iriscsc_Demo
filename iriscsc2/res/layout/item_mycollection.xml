<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lv_item_sel_color"
    android:paddingBottom="15dp"
     >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/ivRight"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:text="dd"
        android:textColor="@color/theme"
        android:textSize="20sp" />

    <!-- 80 -->

    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="95dip"
        android:layout_height="65dip"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tvTitle"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dip"
        android:scaleType="fitXY" />

    <!-- 52dip 60dip -->

    <!-- 20dip -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="8dip"
        >

        <LinearLayout
            android:id="@+id/ll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="3dip"
                android:text="浏览"
                android:textColor="#555555"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="100dip"
                android:text="时间时间时间"
                android:textColor="#555555"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_view"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/ll_view"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:text="评论"
                android:textColor="#555555"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="100dip"
                android:text="时间时间时间"
                android:textColor="#555555"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_comment"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/ll_comment"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="时间时间时间"
                android:textColor="#555555"
                android:textSize="11sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>