<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip" >

    <RelativeLayout
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/send_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="zw"
            android:textColor="#697fb1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reply_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_toRightOf="@id/send_name"
            android:text="回复"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/reply_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_toRightOf="@id/reply_temp"
            android:text="zw"
            android:textColor="#697fb1"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_toRightOf="@id/reply_name"
            android:text=":"
            android:textColor="@color/black" />
    </RelativeLayout>

    
    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:singleLine="false"
        android:layout_toEndOf="@id/name"
        android:text="adgagrwrgwdgfjosdfownegoanfoadgfogajfafoaweignoainagagewgwrgagawegafdacdrfawefasfdasdf"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>